{
  "$schema": "https://json.schemastore.org/package",
  "name": "kd-bot",
  "version": "1.0.0",
  "description": "A Discord bot for the KD-System",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config dist/index.js",
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --respawn src/index.ts",
    "build": "tsup src/index.ts --format cjs --dts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --noEmit && eslint --ext .ts src/"
  },
  "keywords": [],
  "author": "Jake",
  "license": "ISC",
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/eslint": "^8.21.1",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "prettier": "^2.8.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "tsup": "^6.6.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "envsafe": "^2.0.3",
    "zod": "^3.21.4"
  }
}
